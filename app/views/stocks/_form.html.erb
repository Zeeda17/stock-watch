<%= form_with(model: stock) do |form| %>
  <% if !stock.nil?%>
    <% if stock.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(stock.errors.count, "error") %> Unable to find stock:</h2>

        <ul>
          <% stock.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>

  <div class="field">
    <%= form.label :symbol %>
    <%= form.text_field :symbol %>
  </div>
  <div class="field">
    <%= form.label :region %>
    <%= form.text_field :region %>
  </div>
  <div class="field">
    <%= form.label :range %>
    <%= form.text_field :range %>
  </div>

  <div class="actions">
    <%= form.submit  "Search"%>
  </div>
<% end %>
